{
    "name": "nw-next-example",
    "private": true,
    "type": "module",
    "main": "http://localhost:4000",
    "node-remote": "http://localhost:4000",
    "node-main": "server.js",
    "scripts": {
        "postinstall": "base-volta-off-of-nwjs",
        "lint": "next lint",
        "dev": "concurrently -k npm:dev:website npm:dev:desktop",
        "dev:website": "node server.js",
        "dev:desktop": "wait-on http-get://localhost:4000 && nw .",
        "bld": "npm run bld:website && npm run bld:desktop",
        "bld:website": "next build",
        "bld:desktop": "nwbuild --mode=build --managed-manifest=./package.nw.json --no-glob --outDir=./build/desktop .next"
    },
    "devDependencies": {
        "@next/eslint-plugin-next": "^14.2.2",
        "base-volta-off-of-nwjs": "^1.0.5",
        "concurrently": "^8.2.2",
        "eslint": "^8.5.7",
        "next": "^14.2.2",
        "nw": "^0.86.0-3",
        "nw-builder": "^4.7.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "wait-on": "^7.2.0"
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es6": true
        },
        "parserOptions": {
            "sourceType": "module",
            "ecmaFeatures": {
                "jsx": true
            }
        },
        "extends": [
            "plugin:@next/next/recommended"
        ],
        "settings": {
            "react": {
                "version": "detect"
            }
        }
    },
    "volta": {
        "node": "21.1.0"
    }
}
