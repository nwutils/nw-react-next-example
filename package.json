{
    "name": "nw-next-example",
    "private": true,
    "type": "module",
    "main": "http://localhost:4000",
    "node-remote": "http://localhost:4000",
    "scripts": {
        "postinstall": "base-volta-off-of-nwjs",
        "lint": "next lint",
        "dev": "concurrently -k npm:dev:website npm:dev:desktop",
        "dev:website": "next dev -p 4000",
        "dev:desktop": "wait-on http-get://localhost:4000 && nw .",
        "build": "npm run build:website && npm run build:desktop",
        "build:website": "next build",
        "build:desktop": "nwbuild --mode=build --flavor=sdk --cacheDir=./node_modules/nw --outDir=./build/desktop --managedManifest=./package.nw.json --glob=false .next"
    },
    "devDependencies": {
        "@next/eslint-plugin-next": "^14.1.0",
        "base-volta-off-of-nwjs": "^1.0.3",
        "concurrently": "^8.2.2",
        "eslint": "^8.56.0",
        "next": "^14.1.0",
        "nw-builder": "^4.5.3",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "wait-on": "^7.2.0"
    },
    "engines": {
        "node": "19.3.0"
    },
    "packageManager": "npm@10.3.0",
    "eslintConfig": {
        "env": {
            "browser": true,
            "es6": true
        },
        "parserOptions": {
            "sourceType": "module",
            "ecmaFeatures": {
                "jsx": true
            }
        },
        "globals": {
            "nw": true
        },
        "extends": [
            "plugin:@next/next/recommended"
        ],
        "settings": {
            "react": {
                "version": "detect"
            }
        }
    },
    "dependencies": {
        "nw": "^0.84.0"
    }
}
